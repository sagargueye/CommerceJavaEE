<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>controler.servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>connexion</servlet-name>
        <servlet-class>connexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>c_connexion</servlet-name>
        <servlet-class>controler.c_connexion</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>value1</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>value2</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>c_accueil</servlet-name>
        <servlet-class>controler.c_accueil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>c_inscription</servlet-name>
        <servlet-class>controler.c_inscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>connexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>c_connexion</servlet-name>
        <url-pattern>/c_connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>c_accueil</servlet-name>
        <url-pattern>/c_accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>c_inscription</servlet-name>
        <url-pattern>/c_inscription</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>c_accueil</welcome-file>
    </welcome-file-list>
</web-app>
